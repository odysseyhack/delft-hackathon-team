<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/seed_words_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.github.sofaid.app.ui.signup_seedwords.SignupSeedWordsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/activity_padding">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="VERY IMPORTANT!"
                android:textColor="@color/danger"
                android:textSize="@dimen/font_larger"
                android:textStyle="bold" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_normal"
                android:layout_marginTop="@dimen/spacing_huge"
                android:text="@string/seed_words_message"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/font_normal" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/seed_words_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_normal"
                android:text="Apple Tiger Banana Cat Good Cool Orange Tree Hello Create Pencil Mobile"
                android:textSize="@dimen/font_large" />


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/seed_words_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:layout_marginRight="@dimen/spacing_normal"
            android:text="I have noted down the seed words."
            android:textStyle="bold" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_normal"
            android:text="You can find these seed words later from settings menu" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/finish_button"
            style="@style/primary_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height_tall"
            android:layout_weight="1"
            android:enabled="false"
            android:text="FINISH" />
    </LinearLayout>


</LinearLayout>
