<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="backgroundTint">@color/primary_dark</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="label">
        <item name="android:textColor">@color/secondary_text_light</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:layout_marginLeft">@dimen/spacing_tiny</item>
    </style>

    <!-- Definition of default style for Button -->
    <style name="primary_button" parent="android:style/Widget.Button">
        <item name="android:layout_height">@dimen/button_height_normal</item>
        <item name="android:textColor">@color/primary_text_inverted</item>
        <item name="android:textSize">@dimen/font_larger</item>
         <item name="android:fontFamily">@font/gotham</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/primary_button</item>
    </style>

    <style name="emoji"><item name="android:textSize">20sp</item></style>
    <style name="description_text">
        <item name="android:textSize">
            18sp
        </item>

        <item name="android:textColor">
            #232323
        </item>

        <item name="android:fontFamily">
            @font/gotham_light
        </item>
    </style>

    <style name="button_text">
        <item name="android:textSize">
            18sp
        </item>

        <item name="android:textColor">
            #FFFFFF
        </item>

        <item name="android:fontFamily">
            @font/gotham_light
        </item>
    </style>

    <style name="logo_text">

        <item name="android:textSize">
            60sp
        </item>

        <item name="android:textColor">
            #474EBB
        </item>

        <item name="android:fontFamily">
            @font/oswald
        </item>

    </style>

</resources>
